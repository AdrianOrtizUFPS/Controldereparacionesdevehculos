# Puerto del servidor Express
PORT=4000

# URL de conexión completa (recomendado en producción)
# DATABASE_URL=postgresql://usuario:password@localhost:5432/crv

# Variables separadas (se usarán si DATABASE_URL no está definida)
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=
PGDATABASE=crv

# Habilitar SSL si te conectas a un proveedor gestionado
# PGSSL=true

# JWT para autenticación
JWT_SECRET=pon-aqui-una-clave-segura

# Opcional: variables para seed del usuario admin (usadas por npm run seed:admin)
ADMIN_NAME=Admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123
ADMIN_ROLE=admin
